{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "ES2017.SharedMemory"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noEmit": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["@citizenfx/client"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "stubs"]
}
